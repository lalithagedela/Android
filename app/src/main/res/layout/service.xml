<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Health Services"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="@dimen/dimen_10dp"
        android:textSize="@dimen/dimen_25dp"
        android:background="#463683"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/health_services"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nursing_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/nursing_ripple"
            android:padding="@dimen/dimen_10dp"
            android:text="Nursing"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/physiotherapy_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/phy_ripple"
            android:padding="@dimen/dimen_10dp"
            android:text="Physiotheraphy"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/nursing_button"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/doctor_consultation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/consulation_ripple"
            android:padding="@dimen/dimen_10dp"
            android:text="doctor_consultation"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/physiotherapy_button"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/pharmacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/pharmacy"
            android:padding="@dimen/dimen_10dp"
            android:text="pharmacy"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/doctor_consultation" />

        <TextView
            android:id="@+id/chief_complaints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:text="chief_complaints"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pharmacy" />



        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit"
            android:gravity="top|start"
            android:hint="Enter text"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:inputType="textMultiLine"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:maxLength="50"
            android:maxLines="10"
            android:minLines="1"
            android:padding="@dimen/dimen_20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chief_complaints"
            />

        <TextView
            android:id="@+id/charCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:text="0/50"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/editText"
            app:layout_constraintTop_toBottomOf="@id/editText"
            />


        <TextView
            android:id="@+id/nursing_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="@dimen/dimen_20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/charCount"
            android:text="Nursing is a profession focused on promoting and restoring health, preventing illness."
            />



        <TextView
            android:id="@+id/phy_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:textSize="@dimen/dimen_20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/nursing_data"
            android:textColor="@color/black"
            android:text="Physiotherapy is a medical profession and is primarily concerned with the prevention of disability, impairment, and injury."/>






        <TextView
            android:id="@+id/consult_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phy_data"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:textSize="@dimen/dimen_20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="As a data consultant, you'll support businesses by analyzing data to discover insights."/>



        <TextView
            android:id="@+id/pharmacy_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/consult_data"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:textSize="@dimen/dimen_20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Pharmacy collects huge volumes of patient and transaction-based data and keeps it for a minimum of 10 years."/>








    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>