<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimen_30dp"
    android:background="@color/background">


    <androidx.cardview.widget.CardView
        android:id="@+id/dashboard_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:background="@drawable/cardview_drawable"
        app:cardCornerRadius="@dimen/dimen_15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/dashboard_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_40dp"
            android:paddingRight="@dimen/dimen_120dp"
            android:paddingBottom="@dimen/dimen_40dp"
            android:text="@string/dashboard"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_30dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dashboard_data" />



        <ImageView
            android:id="@+id/dashboard_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arrow_svgrepo_com"
            android:layout_marginTop="@dimen/dimen_40dp"
            android:layout_marginStart="245dp"/>

    </androidx.cardview.widget.CardView>




    <androidx.cardview.widget.CardView
        android:id="@+id/labdetails_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:background="@drawable/cardview_drawable"
        app:cardCornerRadius="@dimen/dimen_15dp"
        app:layout_constraintStart_toEndOf="@+id/dashboard_data"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/labdetails_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_40dp"
            android:paddingRight="@dimen/dimen_120dp"
            android:paddingBottom="@dimen/dimen_40dp"
            android:text="@string/lab"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_30dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dashboard_data" />



        <ImageView
            android:id="@+id/labdetails_iamge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arrow_svgrepo_com"
            android:layout_marginTop="@dimen/dimen_40dp"
            android:layout_marginStart="245dp"/>

    </androidx.cardview.widget.CardView>





    <androidx.cardview.widget.CardView
        android:id="@+id/history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:background="@drawable/cardview_drawable"
        app:cardCornerRadius="@dimen/dimen_15dp"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/dashboard_data">


        <TextView
            android:id="@+id/history_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_40dp"
            android:paddingRight="@dimen/dimen_120dp"
            android:paddingBottom="@dimen/dimen_40dp"
            android:text="@string/History"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_30dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dashboard_data" />



        <ImageView
            android:id="@+id/history_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arrow_svgrepo_com"
            android:layout_marginTop="@dimen/dimen_40dp"
            android:layout_marginStart="245dp"
            android:layout_marginEnd="@dimen/dimen_10dp"/>

    </androidx.cardview.widget.CardView>










</androidx.constraintlayout.widget.ConstraintLayout>