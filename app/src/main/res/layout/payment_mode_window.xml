<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimen_30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_40dp"/>

    <TextView
        android:id="@+id/payment_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Mode "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_10dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cash_button"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="Cash"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/payment_mode"
        android:layout_marginTop="@dimen/dimen_20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/cash_button"
        android:textColor="@color/white"/>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/upi_button"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@+id/payment_mode"
        app:layout_constraintStart_toEndOf="@id/cash_button"
        android:text="UPI"
        android:textColor="@color/black"
        android:background="@drawable/dialog_edit"/>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/card_button"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@+id/payment_mode"
        app:layout_constraintStart_toEndOf="@id/upi_button"
        android:text="Card"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:background="@drawable/dialog_edit"/>



    <TextView
        android:id="@+id/Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cash_button"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_20dp"/>


    <TextView
        android:id="@+id/amount_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Amount"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_alignParentEnd="true"
        android:text="Rs.1100"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_20dp"
        android:background="@drawable/dialog_edit"
        android:padding="@dimen/dimen_15dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/amount_edit"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:layout_marginStart="120dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Done"
        android:textAllCaps="false"
        android:background="@drawable/button_dialog"
        android:textColor="@color/white"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        android:text="X"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_20dp"
        app:layout_constraintBottom_toTopOf="@+id/payment"
        app:layout_constraintEnd_toStartOf="parent"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginLeft="280dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>