<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LALITHA"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dimen_80dp"
        android:layout_marginTop="@dimen/dimen_40dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/student_rollno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="85"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dimen_90dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/student_name"/>

    <TextView
        android:id="@+id/gradutaion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BTECH"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dimen_70dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@+id/student_rollno"
        />

    <TextView
        android:id="@+id/IT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IT"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dimen_90dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@+id/gradutaion" />


</androidx.constraintlayout.widget.ConstraintLayout>