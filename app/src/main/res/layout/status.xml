<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <include
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header">

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/status"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:textSize="@dimen/dimen_30dp"
                android:textColor="@color/black"
                android:padding="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_20dp"/>

            <FrameLayout
                android:id="@+id/status_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/status"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:padding="@dimen/dimen_25dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/status">

                <Spinner
                    android:id="@+id/status_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/status"
                    android:background="@drawable/arrow"
                    style="@style/MySpinnerLook"/>

            </FrameLayout>

            <TextView
                android:id="@+id/Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/status_layout"
                android:text="@string/location"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_30dp"/>

            <FrameLayout
                android:id="@+id/location_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/status"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:padding="@dimen/dimen_25dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Location">

                <Spinner
                    android:id="@+id/location_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/location"
                    android:background="@drawable/arrow"/>

            </FrameLayout>

            <TextView
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/location_layout"
                android:text="@string/city"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_30dp"/>

            <FrameLayout
                android:id="@+id/city_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/status"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:padding="@dimen/dimen_25dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/city">

                <Spinner
                    android:id="@+id/city_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/city"
                    android:background="@drawable/arrow"/>

            </FrameLayout>

            <TextView
                android:id="@+id/assign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/city_layout"
                android:text="@string/Assigned"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_30dp"/>

            <EditText
                android:id="@+id/assign_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/status"
                app:layout_constraintTop_toBottomOf="@+id/assign"
                android:padding="@dimen/dimen_25dp"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_60dp"/>

            <TextView
                android:id="@+id/schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/assign_edit"
                android:text="@string/Schedule"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_30dp"/>

            <TextView
                android:id="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/status"
                app:layout_constraintStart_toStartOf="parent"
                android:drawableRight="@drawable/calendar_svgrepo_com"
                app:layout_constraintTop_toBottomOf="@+id/schedule"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:padding="@dimen/dimen_15dp"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:layout_marginEnd="@dimen/dimen_60dp"/>

            <TextView
                android:id="@+id/document_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/icon"
                android:text="@string/document"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_30dp"/>

            <FrameLayout
                android:id="@+id/document_type_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/status"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:padding="@dimen/dimen_25dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/document_type">

                <Spinner
                    android:id="@+id/document_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/document"
                    android:background="@drawable/arrow"/>

            </FrameLayout>

            <TextView
                android:id="@+id/dashes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/document_type_layout"
                android:background="@drawable/dotted"
                android:layout_marginTop="@dimen/dimen_40dp"
                android:padding="@dimen/dimen_90dp"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:layout_marginEnd="@dimen/dimen_60dp" />


                <ImageView
                    android:id="@+id/upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/upload_svgrepo_com"
                    app:layout_constraintTop_toBottomOf="@+id/document_type"
                    android:layout_marginTop="150dp"/>


                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/msg"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_20dp"
                    android:layout_marginStart="@dimen/dimen_25dp"
                    app:layout_constraintTop_toBottomOf="@+id/upload"
                    android:padding="@dimen/dimen_40dp"/>



            <include
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/background"
                android:layout_marginTop="@dimen/dimen_90dp"
                app:layout_constraintTop_toBottomOf="@+id/dashes"
                app:layout_constraintStart_toStartOf="@+id/dashes"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>