<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/start"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/status"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:textSize="@dimen/dimen_20dp"
                android:textColor="@color/black"
                android:padding="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_20dp"/>

            <FrameLayout
                android:id="@+id/status_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/status"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:padding="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/status">

                <Spinner
                    android:id="@+id/status_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/status"/>

            </FrameLayout>

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/status_layout"
                android:text="@string/location"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_20dp"/>

            <FrameLayout
                android:id="@+id/location_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/status"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:padding="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/location">

                <Spinner
                    android:id="@+id/location_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/state"/>

            </FrameLayout>

            <TextView
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/location_layout"
                android:text="@string/city"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_20dp"/>

            <FrameLayout
                android:id="@+id/city_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/status"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:padding="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/city">

                <Spinner
                    android:id="@+id/city_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/state"/>

            </FrameLayout>

            <TextView
                android:id="@+id/assign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/city_layout"
                android:text="@string/Assigned"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_20dp"/>

            <EditText
                android:id="@+id/assign_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/status"
                app:layout_constraintTop_toBottomOf="@+id/assign"
                android:padding="@dimen/dimen_15dp"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_20dp"/>

            <TextView
                android:id="@+id/schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/assign_edit"
                android:text="@string/Schedule"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_20dp"/>

            <TextView
                android:id="@+id/date_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/status"
                app:layout_constraintStart_toStartOf="parent"
                android:drawableRight="@drawable/date2"
                app:layout_constraintTop_toBottomOf="@+id/schedule"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:padding="@dimen/dimen_10dp"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:layout_marginEnd="@dimen/dimen_20dp"/>

            <TextView
                android:id="@+id/document_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/date_icon"
                android:text="@string/document"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_20dp"/>

            <FrameLayout
                android:id="@+id/document_type_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/status"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:padding="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/document_type">

                <Spinner
                    android:id="@+id/document_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/state"/>

            </FrameLayout>

            <TextView
                android:id="@+id/dashes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/document_type_layout"
                android:background="@drawable/dotted"
                android:layout_marginTop="@dimen/dimen_25dp"
                android:padding="@dimen/dimen_50dp"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:layout_marginEnd="@dimen/dimen_20dp" />


                <ImageView
                    android:id="@+id/upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/upload_svgrepo_com"
                    app:layout_constraintTop_toBottomOf="@+id/document_type"
                    android:layout_marginTop="@dimen/dimen_100dp"/>


               <TextView
                   android:id="@+id/text"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/msg"
                   android:layout_marginStart="@dimen/dimen_25dp"
                   app:layout_constraintTop_toBottomOf="@+id/upload"
                   android:padding="@dimen/dimen_10dp"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button1"
                android:layout_width="130dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dashes"
                android:text="@string/back"
                android:background="@drawable/button_dialog"
                android:padding="@dimen/dimen_10dp"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/dimen_25dp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_20dp"/>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/home_4_svgrepo_com"
                app:layout_constraintTop_toBottomOf="@+id/dashes"
                app:layout_constraintStart_toEndOf="@+id/button1"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:layout_marginTop="@dimen/dimen_30dp"/>




            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button2"
                android:layout_width="130dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@+id/dashes"
                app:layout_constraintStart_toEndOf="@+id/button1"
                android:layout_marginTop="@dimen/dimen_25dp"
                android:layout_marginStart="115dp"
                android:text="@string/update"
                android:textAllCaps="false"
                android:textSize="@dimen/dimen_20dp"
                android:textColor="@color/white"
                android:background="@drawable/button_dialog"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>