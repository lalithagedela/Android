<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dimen_20dp">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/company"
        android:textSize="@dimen/dimen_20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginEnd="@dimen/dimen_40dp"
        android:layout_marginStart="@dimen/dimen_90dp"
        android:layout_marginTop="@dimen/dimen_80dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/employees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:layout_marginEnd="@dimen/dimen_80dp"
        android:layout_marginStart="@dimen/dimen_50dp"
        android:text="@string/emp"
        android:textSize="@dimen/dimen_15dp"
        android:background="@color/blue"
        android:textColor="@color/white"
        />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/managers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/employees"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:layout_marginEnd="@dimen/dimen_80dp"
        android:layout_marginStart="@dimen/dimen_50dp"
        android:text="@string/manager"
        android:textSize="@dimen/dimen_15dp"
        android:background="@color/blue"
        android:textColor="@color/white"
        />















</androidx.constraintlayout.widget.ConstraintLayout>