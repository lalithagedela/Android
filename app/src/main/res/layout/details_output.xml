    <TextView
        android:id="@+id/Country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zipcode"
        android:layout_alignBaseline="@+id/country_colon"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/country_colon"
        android:textColor="@color/black"
        android:textSize="20sp"/>




    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Country"
        android:layout_alignBaseline="@+id/date_colon"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/date_colon"
        android:textColor="@color/black"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_alignBaseline="@+id/age_colon"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/age_colon"
