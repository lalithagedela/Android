<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">


        <include
            android:id="@+id/header"
            layout="@layout/healthclinic_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.cardview.widget.CardView
            android:id="@+id/details_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20dp"
            android:layout_marginTop="@dimen/_20dp"
            app:cardCornerRadius="@dimen/_10dp"
            app:layout_constraintStart_toStartOf="@+id/header"
            app:layout_constraintTop_toBottomOf="@+id/header">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10dp">


                <TextView
                    android:id="@+id/UHID_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/uhid_text"
                    android:textColor="@color/grey"
                    android:textSize="10sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/opid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/uhid"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/UHID_text"
                    app:layout_constraintTop_toBottomOf="@+id/UHID_text" />

                <TextView
                    android:id="@+id/patient_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_30dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/patientname"
                    android:textColor="@color/grey"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@+id/opid"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/patient_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/patient_name"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/patient_txt"
                    app:layout_constraintTop_toBottomOf="@+id/patient_txt" />


                <TextView
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="|  Male |"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/patient_name"
                    app:layout_constraintTop_toBottomOf="@+id/patient_txt" />

                <TextView
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="45yrs"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/gender"
                    app:layout_constraintTop_toBottomOf="@+id/patient_txt" />


                <TextView
                    android:id="@+id/mobile_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/mobile_text"
                    android:textSize="10sp"
                    app:layout_constraintStart_toStartOf="@+id/opid"
                    app:layout_constraintTop_toBottomOf="@+id/opid"


                    />

                <TextView
                    android:id="@+id/mobile_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/mobile_num"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/opid"
                    app:layout_constraintTop_toBottomOf="@+id/mobile_txt" />

                <TextView
                    android:id="@+id/visit_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/visit_reason"
                    android:textSize="10sp"
                    app:layout_constraintStart_toStartOf="@+id/patient_name"
                    app:layout_constraintTop_toBottomOf="@+id/patient_name" />

                <TextView
                    android:id="@+id/neck_pain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/neck_pain"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/visit_reason"
                    app:layout_constraintTop_toBottomOf="@+id/visit_reason"

                    />

                <TextView
                    android:id="@+id/service_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/service_name"
                    android:textColor="@color/grey"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@+id/visit_reason"
                    app:layout_constraintTop_toBottomOf="@+id/gender" />


                <TextView
                    android:id="@+id/spain_cdtns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/spain_conditions"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/service_name"
                    app:layout_constraintTop_toBottomOf="@+id/service_name"

                    />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/checkbox_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20dp"
            android:layout_marginTop="@dimen/_20dp"
            app:cardCornerRadius="@dimen/_10dp"
            app:layout_constraintStart_toStartOf="@+id/details_cardview"
            app:layout_constraintTop_toBottomOf="@+id/details_cardview">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10dp">


                <CheckBox
                    android:id="@+id/initial_assessment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/assessment"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <CheckBox
                    android:id="@+id/sessions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/session"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toEndOf="@+id/initial_assessment"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/upload_perspection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/perspection"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/checkbox_cardview"
            app:layout_constraintTop_toBottomOf="@+id/checkbox_cardview" />


        <LinearLayout
            android:id="@+id/dashes_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_marginStart="@dimen/_20dp"
            android:background="@drawable/dotted"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="@id/upload_perspection"
            app:layout_constraintTop_toBottomOf="@id/upload_perspection">

            <ImageView
                android:id="@+id/upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:src="@drawable/upload_svgrepo_com" />

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_5dp"
                android:paddingBottom="@dimen/_10dp"
                android:textSize="11sp"
                android:textColor="@color/light_grey"
                android:text="@string/text_msg" />
        </LinearLayout>

        <include
            android:id="@+id/background"
            layout="@layout/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_10dp"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
