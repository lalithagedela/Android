<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/emp_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employee  Information"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:textSize="@dimen/dimen_20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/dimen_10dp"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emp_info"
        android:layout_marginLeft="@dimen/dimen_5dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@drawable/user_profile"
        android:layout_marginStart="@dimen/dimen_10dp"/>



    <TextView
        android:id="@+id/label_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:text="Employee Name"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/name_colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_alignBaseline="@+id/label_name"
        android:layout_centerHorizontal="true"
        android:text="-"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Employee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_alignBaseline="@+id/name_colon"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/dimen_5dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/name_colon"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/label_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_name"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:text="Employee Id"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/id_colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/label_id"
        android:text="-"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />




    <TextView
        android:id="@+id/Employee_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Employee_name"
        android:layout_alignBaseline="@+id/id_colon"
        android:layout_marginLeft="@dimen/dimen_5dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/id_colon"
        android:textColor="@color/black"
        android:textSize="20sp"/>














</RelativeLayout>